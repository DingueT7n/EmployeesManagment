@model EmployeesManagment.Models.LeaveApplication
@{
    ViewData["Title"] = "RejectLeave";
}

<h1>RejectLeave</h1>

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Reject Leave Application</h1>
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th style="width: 40%;">Employee:</th>
                                        <td>@Html.DisplayFor(model => model.Employee.FullName)</td>
                                    </tr>

                                    <tr>
                                        <th>Start Date:</th>
                                        <td>@Html.DisplayFor(model => model.StartDate)</td>
                                    </tr>
                                    <tr>
                                        <th>Duration:</th>
                                        <td>@Html.DisplayFor(model => model.Duration.Description)</td>
                                    </tr>
                                    <tr>
                                        <th>Status:</th>
                                        <td>@Html.DisplayFor(model => model.Status.Description)</td>
                                    </tr>
                                    <tr>
                                        <th>Approved On:</th>
                                        <td>@Html.DisplayFor(model => model.ApprovedOn)</td>
                                    </tr>
                                    <tr>
                                        <th>Created On:</th>
                                        <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                                    </tr>
                                    <tr>
                                        <th>Modified On:</th>
                                        <td>@Html.DisplayFor(model => model.ModifiedOn)</td>
                                    </tr>
                                    <tr>
                                        <th>Description:</th>
                                        <td>@Html.DisplayFor(model => model.Description)</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>Leave Days:</th>
                                        <td>@Html.DisplayFor(model => model.NoOfDays)</td>
                                    </tr>
                                    <tr>
                                        <th>End Date:</th>
                                        <td>@Html.DisplayFor(model => model.EndDate)</td>
                                    </tr>
                                    <tr>
                                        <th>Leave Type:</th>
                                        <td>@Html.DisplayFor(model => model.leaveType.Name)</td>
                                    </tr>

                                    <tr>
                                        <th>Approved By:</th>
                                        <td>@Html.DisplayFor(model => model.ApprovedById)</td>
                                    </tr>
                                    <tr>
                                        <th>Created By:</th>
                                        <td>@Html.DisplayFor(model => model.CreatedById)</td>
                                    </tr>

                                    <tr>
                                        <th>Modified By:</th>
                                        <td>@Html.DisplayFor(model => model.ModifiedById)</td>
                                    </tr>
                                    <tr>
                                        <th style="width: 40%;">Attachment:</th>
                                        <td>@Html.DisplayFor(model => model.Attachment)</td>
                                    </tr>

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

<form asp-action="RejectLeave" method="post">
    <div class="text-center mt-3">
        <label asp-for="ApprovalNotes" class="control-label"> Rejected Notes ( The Reason For the Decision )  </label>
        <textarea class="form-control" asp-for="ApprovalNotes"></textarea>
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Reject Leave Application</button>
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </div>
</form>

<!-- /.container-fluid -->
