@model IEnumerable<EmployeesManagment.Models.LeaveApplication>

@{
    ViewData["Title"] = "Index";
     string GetBorderClass(string statusCode)
    {
        if (statusCode.Contains("Pending"))
        {
            return "Orange";
        }
        else if (statusCode.Contains("Approved"))
        {
            return "green";
        }
        else
        {
            return "red";
        }
    }

}

<p>
    <a asp-action="Create" class="btn btn btn-primary btn-lg">
        <i class="fa fa-plus"></i>
        Add New Leave Application
    </a>
</p>
<div class="card">
    <div class="card-header">
        <h3 class="card-title">Leave Application List</h3>
    </div>
    <!-- /.card-header -->
    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Employee)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NoOfDays)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StartDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EndDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Duration)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.leaveType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Attachment)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>

                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NoOfDays)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Duration.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.leaveType.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Attachment)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>

                        <td style="border-bottom: 10px solid @GetBorderClass(item.Status.Description); padding-bottom: 10px;">
                            @Html.DisplayFor(modelItem => item.Status.Description)
                        </td>
                        
                        <td>
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Actions
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="min-width: 100px;">
                                  
                                    <hr style="margin: 0;">
                                    <a class="dropdown-item btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
                                        <i class="fas fa-edit" style="color: orange;">  Edit </i>
                                    </a>
                                    <a class="dropdown-item btn btn-primary" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="fas fa-eye" style="color: dodgerblue;">  View </i>
                                    </a>
                                    <hr style="margin: 0;">
                                    <a class="dropdown-item btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                                        <i class="fas fa-trash-alt" style="color: red;">  Delete </i>
                                    </a>
                                    <hr style="margin: 0;">
                                    @if (item.Status.Code == "Pending")
                                    {
                                    <a asp-action="ApproveLeave" asp-route-id="@item.Id" asp-controller="LeaveApplications" id="approveLeaveButton" class="dropdown-item btn btn-primary" >
                                            <i  class="fa fa-check-square" style="color: green;"> Approve </i>
                                        </a>


                                        <hr style="margin: 0;">
                                        <a class="dropdown-item btn btn-primary" asp-action="RejectLeave" asp-route-id="@item.Id" asp-controller="LeaveApplications" id="approveLeaveButton" class="dropdown-item btn btn-primary" >
                                            <i class="fas fa-ban" style="color: red;">  Reject</i>
                                        </a>

                                    }
                                  
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>